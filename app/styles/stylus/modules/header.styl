header
  width 100%
  height $headerHeight
  display flex
  align-items center
  padding 0 18px
  position fixed
  top 0
  z-index 10

  background-color $white

  font-family Regular

  .points
    width 60px
    height 30px
    display flex
    justify-content center
    align-items center

    background-color $black

    border-radius 25px

  .points__number
    color $white
    margin-left 6px

  .logo
    position absolute
    left 50%
    transform translateX(-50%)